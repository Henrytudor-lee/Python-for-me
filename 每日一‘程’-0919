#密码------------------------------------
password = '123'
i = 3
while i :
    temp = input('请输入您的密码：')
    if temp == password:
        print('密码正确！')
        break            #打破此循环
    elif '*' in password:
        print('密码内不能含有‘*’符号！您还有',i,' 次机会！')
        continue         #符合条件继续循环
    else:
        temp == input('密码错误，请重新输入')
        continue
    i -= 1
#------------
